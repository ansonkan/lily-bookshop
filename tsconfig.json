{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],

      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],

      "@public": ["public"],
      "@public/*": ["public/*"],

      "@models": ["models"],
      "@models/*": ["models/*"],

      "@theme": ["theme"],
      "@theme/*": ["theme/*"],

      "@utils": ["utils"],
      "@utils/*": ["utils/*"],

      "@types": ["types"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
